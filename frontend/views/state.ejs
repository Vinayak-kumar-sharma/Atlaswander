  <section class="map-section">
    <h2>üó∫Ô∏è State Map</h2>
    <div id="stateMap"></div>
  </section>

  <section class="cities-list">
  <h2>üèô Cities in <%= state.name %></h2>

  <input
    type="text"
    id="citySearch"
    placeholder="üîç Search city..."
    class="city-search-input"
  />

  <% if (cities.length) { %>
    <div class="cities-scroll-container">
      <ul id="cityList">
        <% cities.forEach(city => { %>
          <li 
            class="city-item"
            data-lat="<%= city.latitude %>"
            data-lon="<%= city.longitude %>"
            data-name="<%= city.name %>"
          >
            <%= city.name %>
          </li>
        <% }) %>
      </ul>
    </div>
  <% } else { %>
    <p style="text-align: center; opacity: 0.8;">No city data available.</p>
  <% } %>
</section>


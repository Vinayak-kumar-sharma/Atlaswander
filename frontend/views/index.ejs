<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Atlas Explorer</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://leaverou.github.io/awesomplete/awesomplete.css" />
  <script src="https://leaverou.github.io/awesomplete/awesomplete.min.js"></script>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</head>
<body>
  <%- include('partials/header') %>

  <!-- Hero & Intro Section -->
  <section class="hero">
    <h1>Welcome to Atlas Explorer</h1>
    <p>Explore countries, regions, climate, wildlife, and more using our interactive global tools.</p>
    <div class="search-container">
      <input id="searchInput" class="awesomplete" list="suggestions" placeholder="Search for a country or region..." />
      <datalist id="suggestions">
        <option>India</option>
        <option>Germany</option>
        <option>Brazil</option>
        <option>Asia</option>
        <option>Africa</option>
        <!-- Add more dynamically as needed -->
      </datalist>
      <button id="searchBtn">Search</button>
    </div>
  </section>

  <!-- Feature Highlights -->
  <section class="features">
    <h2>What You Can Discover</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <h3>üåç Country Info</h3>
        <p>Population, geography, and national insights.</p>
      </div>
      <div class="feature-card">
        <h3>‚òÅÔ∏è Climate</h3>
        <p>Discover weather patterns and climate data.</p>
      </div>
      <div class="feature-card">
        <h3>ü¶Å Wildlife</h3>
        <p>Explore native animals and plant species.</p>
      </div>
      <div class="feature-card">
        <h3>üìç Regions</h3>
        <p>View continental stats and related countries.</p>
      </div>
    </div>
  </section>

  <!-- Interactive Map Section -->
  <section class="map-section">
    <h2>Interactive Map</h2>
    <p>üñ±Ô∏è Click on any location to explore relevant data by selecting a category.</p>
    <div class="map-options">
      <label for="modeSelector">Choose info:</label>
      <select id="modeSelector">
        <option value="country">Country Info</option>
        <option value="climate">Climate</option>
        <option value="wildlife">Wildlife</option>
        <option value="population">Population</option>
      </select>
    </div>
    <div id="map" class="map-container"></div>
  </section>

  <%- include('partials/footer') %>

  <script>
    // Search Functionality
    document.getElementById("searchBtn").addEventListener("click", () => {
      const query = document.getElementById("searchInput").value.trim();
      if (!query) return alert("Please enter a country or region name.");
      if (["asia", "africa", "europe", "oceania", "americas"].includes(query.toLowerCase())) {
        window.location.href = `/region/${encodeURIComponent(query)}`;
      } else {
        window.location.href = `/country/${encodeURIComponent(query)}`;
      }
    });

    // Map Initialization
    const map = L.map('map').setView([20, 0], 2);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Map click logic
    map.on('click', async function (e) {
      const lat = e.latlng.lat;
      const lon = e.latlng.lng;
      const mode = document.getElementById("modeSelector").value;

      try {
        const response = await fetch(`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lon}`);
        const data = await response.json();
        const country = data.address.country;

        if (!country) {
          alert("No country found for this location.");
          return;
        }

        switch (mode) {
          case "country":
            window.location.href = `/country/${encodeURIComponent(country)}`;
            break;
          case "climate":
            window.location.href = `/climate?country=${encodeURIComponent(country)}`;
            break;
          case "wildlife":
            window.location.href = `/wildlife?country=${encodeURIComponent(country)}`;
            break;
          case "population":
            const restData = await fetch(`https://restcountries.com/v3.1/name/${country}?fullText=true`);
            const [countryInfo] = await restData.json();
            const region = countryInfo.region;
            window.location.href = `/population?region=${encodeURIComponent(region)}`;
            break;
          default:
            alert("Invalid mode selected.");
        }

      } catch (error) {
        console.error("Error:", error);
        alert("Failed to fetch location data.");
      }
    });
  </script>
</body>
</html>

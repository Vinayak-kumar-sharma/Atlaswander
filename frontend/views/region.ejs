<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= region.charAt(0).toUpperCase() + region.slice(1)  %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/region.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
</head>
<body>

<header>
    <h1>üó∫Ô∏è Atlas Wander</h1>
    <p>Explore the unseen: From climates to creatures to cultures.</p>
    <div class="site-brand">
    <a href="/" class="home-link">Back to Home</a>
    </div>
</header>

<section class="container">
  <h1><%= region.charAt(0).toUpperCase() + region.slice(1)  %></h1>

  <div class="region-summary">
    <p><strong>Total Countries:</strong> <%= countries %></p>
    <p><strong>Total Area:</strong> <%= area_km2 %> km¬≤</p>
    <p><strong>Total population:</strong> <%= totalPopulation.toLocaleString() %></p>
  </div>
  <h2>Countries by Subregion in <%= region.charAt(0).toUpperCase() + region.slice(1) %>:</h2>
<% for (let subregion in groupedCountries) { %>
  <h3><%= subregion %></h3>
  <ul>
    <% groupedCountries[subregion].forEach(country => { %>
      <li>
        <a href="/api/country/<%= encodeURIComponent(country) %>">
          <%= country %>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
  <div id="regionMap" style="height: 400px; margin: 20px 0;"></div>
</section>

  <%- include('partials/footer') %>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
  const centerLat = <%= center.lat %>;
  const centerLon = <%= center.lon %>;

  const map = L.map('regionMap').setView([centerLat, centerLon], 3);
  
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // If you plan to add markers later, you can do it here
</script>
</body>
</html>